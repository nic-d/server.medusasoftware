{% extends layout().template %}

{% set meta = {
    title: 'Login',
    description: 'Login',
} %}

{% block body %}
    <div>
        <div class="content content-full">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-4 col-lg-4">
                    <h2 class="text-center">{{ translate('Login') }}</h2>

                    <div class="block block-bordered block-rounded block-fx-shadow">
                        <div class="block-content">
                            {{ form().prepare() }}
                            {{ form().openTag(form) | raw }}
                                {% if isLoginError %}
                                    <div class="alert alert-warning" role="alert">
                                        {{ translate('Incorrect email and/or password') }}.
                                        <a href="{{ url('user.forgot') }}">{{ translate('Forgot Password') }}?</a>
                                    </div>
                                {% endif %}

                                <div class="form-group">
                                    {{ formRow(form.get('email')) }}
                                </div>

                                <div class="form-group">
                                    {{ formRow(form.get('password')) }}
                                </div>

                                {{ formRow(form.get('redirect_url')) }}
                                {{ formRow(form.get('csrf')) }}

                                <div class="form-group">
                                    {{ formRow(form.get('submit')) }}
                                </div>
                            {{ form().closeTag(form) | raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}