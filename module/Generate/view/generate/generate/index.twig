{% extends 'layout/app.twig' %}

{% set meta = {
    title: 'Generate',
} %}

{% set activePage = 'generate' %}

{% block body %}
    <div class="content">
        <h2 class="content-heading">
            Generate application.json
        </h2>

        <div class="row">
            <div class="col-4">
                <div class="block block-rounded">
                    <div class="block-content">
                        {{ form().prepare() }}
                        {{ form().openTag(form) | raw }}
                            {{ formRow(form.get('csrf')) }}

                            <div class="form-group">
                                {{ formRow(form.get('product')) }}
                            </div>

                            <div class="form-group">
                                {{ formRow(form.get('submit')) }}
                            </div>
                        {{ form().closeTag(form) | raw }}
                    </div>
                </div>
            </div>

            <div class="col-8">
                <div class="block block-rounded">
                    <div class="block-content">
                        <div class="form-group">
                            <textarea class="form-control" name="content" id="content" rows="10" placeholder="Generated file is placed here...">{{ generated }}</textarea>
                            <small>Note: Base64 encode this once you're done editing.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}