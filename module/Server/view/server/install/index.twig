<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>INSTALLER - MedusaSoftware</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5 mb-2">Install</h1>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-6">
                {{ flashMessenger().render('success', ['alert', 'alert-success']) | raw }}
                {{ flashMessenger().render('error', ['alert', 'alert-danger']) | raw }}

                {{ form().openTag(form) | raw }}
                    <div class="form-group">
                        {{ formRow(form.get('license')) }}
                    </div>

                    <div class="form-group">
                        {{ formRow(form.get('host')) }}
                    </div>

                    <div class="form-group">
                        {{ formRow(form.get('port')) }}
                    </div>

                    <div class="form-group">
                        {{ formRow(form.get('user')) }}
                    </div>

                    <div class="form-group">
                        {{ formRow(form.get('password')) }}
                    </div>

                    <div class="form-group">
                        {{ formRow(form.get('name')) }}
                    </div>

                    <div class="form-group">
                        {{ formRow(form.get('appUrl')) }}
                    </div>

                    <div class="form-group">
                        {{ formRow(form.get('submit')) }}
                    </div>
                {{ form().closeTag(form) | raw }}
            </div>
        </div>
    </div>
</body>
</html>