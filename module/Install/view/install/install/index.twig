{% extends 'layout/app.twig' %}

{% set meta = {
    title: 'Installations',
} %}

{% set activePage = 'installations' %}

{% block body %}
    <div class="content">
        <h2 class="content-heading">
            All Installations
        </h2>

        <div class="block block-rounded block-bordered">
            <div class="block-content">
                <div class="table-responsive">
                    <table class="table table-sm table-vcenter">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>License</th>
                                <th>Product</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in installations %}
                                <tr data-hash="{{ item.hash }}">
                                    <td>{{ item.id }}</td>
                                    <td>
                                        <a href="{{ url('license.index/edit', {code: item.license.licenseCode}) }}">
                                            {{ item.license.licenseCode }}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ url('product.index/edit', {hash: item.product.hash}) }}">
                                            {{ item.product.name }}
                                        </a>
                                    </td>
                                    <td>{{ item.timestamp.date | date }}</td>

                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-primary launch-modal">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# VERIFY LICENSE MODAL #}
    <div class="modal" id="view-modal">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">View Installation</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>

                <div class="modal-body pb-1" id="modal-body">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-light" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        let modal = $('#view-modal');

        $('body').on('click', '.launch-modal', function (e) {
            e.preventDefault();
            let hash = $(this).closest('tr').data('hash');

            jQuery.ajax({
                method: 'get',
                url: '/installs/' + hash + '/view',

                success: function (response) {
                    modal.modal('show');
                    modal.find('#modal-body').html(response);
                },

                error: function (response) {
                    modal.modal('hide');
                    modal.find('#modal-body').html('');
                }
            });
        });
    </script>
{% endblock %}